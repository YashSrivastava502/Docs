variable "resource_group_name" {
  description = "The name of the resource group"
  type        = string
  default     = "usel-dr-rgpe1"
}

variable "location" {
  description = "Azure region for resource deployment"
  type        = string
  default     = "East US"
}

variable "gateway_subnet_id" {
  description = "The ID of the GatewaySubnet within the VNet"
  type        = string
}

variable "local_gateway_ip" {
  description = "The public IP address of the on-premises VPN device"
  type        = string
}

variable "local_address_space" {
  description = "The address space of the on-premises network"
  type        = list(string)
}

variable "shared_key" {
  description = "The shared IPSec key for VPN authentication"
  type        = string
}
