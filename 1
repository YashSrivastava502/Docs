# Extract and Install ASR Provider
Start-Process "C:\Temp\ASRProvider.exe" "/q /x:C:\Temp\ASR" -Wait
Start-Process "C:\Temp\ASR\setupdr.exe" "/q /IAcceptEULA" -Wait

# Register Hyper-V host with Vault
& "C:\Program Files\Microsoft Azure Site Recovery Provider\DRConfigurator.exe" `
   /register `
   /VaultCredentialFile:"C:\Temp\MyVault.VaultCredentials"
