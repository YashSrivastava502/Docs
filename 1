def sign_in(page, email, password):
    try:
        # Enter Email
        page.wait_for_selector("input#i0116", timeout=15000)
        page.fill("input#i0116", email)
        page.click("input#idSIButton9")

        # Enter Password
        page.wait_for_selector("input#i0118", timeout=15000)
        page.fill("input#i0118", password)
        page.click("input#idSIButton9")

        # Stay signed in popup
        try:
            page.wait_for_selector("//div[contains(text(), 'Stay signed in?')]", timeout=10000)
            no_button = page.locator("input[value='No']")
            no_button.click()
        except PlaywrightTimeoutError:
            pass  # If popup doesn't appear, skip

    except PlaywrightTimeoutError:
        print("Login process failed due to timeout.")
