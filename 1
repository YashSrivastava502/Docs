import camelot

pdf_file = "HPE Synergy PO_2024-10-11-001.pdf"
output_csv = "HPE_2024.csv"

# extract tables
tables = camelot.read_pdf(pdf_file, pages="all", strip_text="\n")

# agar multiple tables detect huye toh unko jod lo
combined = None
for t in tables:
    df = t.df
    if combined is None:
        combined = df
    else:
        combined = combined.append(df, ignore_index=True)

combined.to_csv(output_csv, index=False)
print(f"âœ… Saved CSV: {output_csv}")
